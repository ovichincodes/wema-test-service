{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=wema;Uid=sa;Pwd=zubby@Docker@123;TrustServerCertificate=true;"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.EntityFrameworkCore.Database": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log_.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ]
  },
  "AppSettings": {
    "SwaggerEndpoint": "/swagger/v1/swagger.json",
    "Origins": "http://localhost:3000",
    "ServiceName": "Wema Test Service",
    "ContextPath": "/wema-test-service",
    "SmsBody": "Dear customer, kindly use [OTP] to onboard.",
    "OtpLength": 6,
    "OtpValidity": 5, // in minutes
    "StatesEndpoint": "https://nga-states-lga.onrender.com/",
    "BanksEndpoint": "https://wema-alatdev-apimgt.azure-api.net/alat-test/api/Shared/GetAllBanks",
    "CacheOptions": {
      "AbsoluteExpiration": 60, // will expire after 60 days
      "SlidingExpiration": 30 // if inactive for 30days
    },
    "NotificationServiceEnabled": true,
    "NotificationServiceExecutionInterval": 2,
    "SmsDispatchLimit": 10
  }
}
